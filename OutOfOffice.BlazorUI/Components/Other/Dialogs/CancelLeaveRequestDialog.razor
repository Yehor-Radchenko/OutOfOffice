<MudDialog>
    <TitleContent>Confirm Cancellation</TitleContent>
    <DialogContent>
        <p>Are you sure you want to cancel this leave request?</p>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Outlined" Color="Color.Primary" OnClick="CloseDialog">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="ConfirmCancel">Confirm</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!;
    
    private void CloseDialog()
    {
        MudDialog.Cancel();
    }

    private void ConfirmCancel()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }
}
